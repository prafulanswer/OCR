        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="container col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit Profile</strong> 
                            </div>
                            <div class="card-body card-block">
                                <form action="/editprofile" method="POST"  class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col col-md-3"><label class=" form-control-label">Static</label></div>
                                        <div class="col-12 col-md-9">
                                            <p class="form-control-static"><%=username%></p>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3"><label for="text-input" class=" form-control-label">Name</label></div>
                                        <div class="col-12 col-md-9"><input type="text" id="text-input" name="name" placeholder="Name" class="form-control"><small class="form-text text-muted">Please enter your name</small></div>
                                    </div>
                                
                                    <div class="row form-group">
                                        <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Address</label></div>
                                        <div class="col-12 col-md-9"><textarea name="address" id="textarea-input" rows="9" placeholder="Address..." class="form-control"></textarea></div>
                                    </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="select" class=" form-control-label">Gender</label></div>
                                            <div class="col-12 col-md-9">
                                                <select name="gender" id="select" class="form-control">
                                                    <option value="0">Please select</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                    
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="multiple-select" class=" form-control-label">Interest </label></div>
                                            <div class="col col-md-9">
                                                <select name="interests" id="multiple-select" multiple="" class="form-control">
                                                    <option value="Cycling">Cycling</option>
                                                    <option value="Jogging">Jogging</option>
                                                    <option value="Yoga">Yoga</option>
                                                    <option value="Heavy Exercise">Heavy Exercise</option>
                                                    <option value="Moderate Exercise">Moderate Exercise</option>
                                                    <option value="Light Exercise">Light Exercise</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                                <div class="col col-md-3"><label for="select" class=" form-control-label">Blood Group</label></div>
                                                <div class="col-12 col-md-9">
                                                    <select name="blood" id="select" class="form-control">
                                                        <option value="0">Please select</option>
                                                        <option value="A+">A+</option>
                                                        <option value="A-">A-</option>
                                                        <option value="B+">B+</option>
                                                        <option value="B-">B-</option>
                                                        <option value="AB+">AB+</option>
                                                        <option value="AB-">AB-</option>
                                                        <option value="O+">O+</option>
                                                        <option value="O-">O-</option>
                                                    </select>
                                                </div>
                                            </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label class=" form-control-label">Active disease</label></div>
                                            <div class="col col-md-9">
                                                <div class="form-check-inline form-check">
                                                    <label for="inline-radio1" class="form-check-label ">
                                                        <input type="radio" id="inline-radio1" name="disease" value="option1" class="form-check-input">True
                                                    </label>
                                                    <label for="inline-radio2" class="form-check-label ">
                                                        <input type="radio" id="inline-radio1" name="disease" value="option2" class="form-check-input">False
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                                <div class="col col-md-3"><label class=" form-control-label">Active Medication</label></div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-radio1" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="medication" value="option1" class="form-check-input">True
                                                        </label>
                                                        <label for="inline-radio2" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="medication" value="option2" class="form-check-input">False
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                        
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                
                            </div>
                        </form>
                        </div>
                    </div>

                    



                </div>

