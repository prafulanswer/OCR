<% include partials/header %>
<% include partials/navbar %>

    <div id="wrapper">

      <!-- Sidebar -->
      <ul class="sidebar navbar-nav">
          <li class="nav-item " id="dashboard">
            <a class="nav-link" href="/">
              <i class="fas fa-fw fa-tachometer-alt"></i>
              <span >Dashboard</span>
            </a>
          </li>
          <% if ( type[0].type == 'admin' ) { %>
             <li class="nav-item dropdown active" id="admin">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-fw fa-folder"></i>
              <span >Admin</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
              <h6 class="dropdown-header">Admin Mode:</h6>
              <a class="dropdown-item" href="/userslist">Userslist</a>
              <a class="dropdown-item" href="/privilege">Privileges</a> 
              <a class="dropdown-item" href="/generateXlsx">Generate Xlsx</a> 
            </div>
          </li>
          <% } %>
          <li class="nav-item" id="complaint">
              <a class="nav-link" href="/complaint">
                <i class="fas fa-comment-alt"></i>
                <span >Complaint</span></a>
          </li>
          <li class="nav-item " id="profile">
              <a class="nav-link" href="/profile">
                <i class="fas fa-address-book"></i>
                <span >Profile</span></a>
          </li>
          <li class="nav-item " id="feedback">
              <a class="nav-link" href="/feedback">
                <i class="fas fa-comment"></i>
                <span >Feed Back</span></a>
          </li>
        </ul>

      <div id="content-wrapper">

        <div class="container-fluid">

            <% if (privilegeSuccess == true) { %>
              <div class="alert alert-success alert-dismissible">
                  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  <strong>Congratulations!</strong> Login successful!!!
              </div>
              <% }%>
          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Admin Access</li>
          </ol>

          <!-- Page Content -->
          <h1>Admin page</h1>
          <hr>
          <div class="container">
            <div class="card card-register mx-auto mt-5">
              <div class="card-header">Grant Status</div>
              <div class="card-body">
                <form action="/grantAccess" method="POST">
                  <div class="form-group">
                    <div class="form-label-group">
                      <input type="text" name="username" id="subject" class="form-control" placeholder="Enter User Name" required="required">
                      <label for="subject">User Name</label>
                    </div>
                  </div>
                  <div class="form-group">
                        <!-- Default dropright button -->
                        <select class="form-control form-control-lg form-label-group" name="type">
                                <option value="Student">Student</option>
                                <option value="Parent">Parent</option>
                                <option value="Teaching Staff">Teaching Staff</option>
                                <option value="Non-Teaching Staff">Non-Teaching Staff</option>
                                <option value="admin">Admin</option>
                        </select>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block sm col-2 center">send</button>
                </form>
              </div>
            </div>
          </div>
          <hr>  
        </div>
        
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <% include partials/copyright %>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <% include partials/logout %>

<% include partials/footer %>
